<idea-plugin>
  <id>com.gravity.drools</id>
  <name>Drools Support</name>
  <vendor email="dev@example.com">Gravity</vendor>
  <description>
    Minimal starter plugin for Drools language support on IntelliJ IDEA 252.* (IC).
    Recognizes .drl files and provides a basic syntax highlighter scaffold.
  </description>

  <!-- Keep it generic so it works on Community and Ultimate -->
  <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="Drools File"
                language="Drools"
                implementationClass="com.gravity.drools.DroolsFileType"
                fieldName="INSTANCE"
                extensions="drl"/>

        <lang.parserDefinition language="Drools"
                               implementationClass="com.gravity.drools.lang.DroolsParserDefinition"/>

        <lang.syntaxHighlighterFactory language="Drools"
                                       implementationClass="com.gravity.drools.DroolsSyntaxHighlighterFactory"/>
    </extensions>


</idea-plugin>
